<Project Sdk="Microsoft.NET.Sdk.Web">
    <PropertyGroup>
        <OutputType>Library</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <LangVersion>preview</LangVersion>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <ServerGarbageCollection>false</ServerGarbageCollection>
        <InvariantGlobalization>true</InvariantGlobalization>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="EndpointMapper" Version="2.0.0"/>
        <PackageReference Include="FluentValidation" Version="11.9.1" />
        <PackageReference Include="Microsoft.Extensions.Hosting.Systemd" Version="8.0.0" />
        <PackageReference Include="System.Linq.Async" Version="6.0.1"/>
        <PackageReference Include="YamlDotNet" Version="15.1.4"/>

        <InternalsVisibleTo Include="Hexus"/>
        <InternalsVisibleTo Include="Hexus.Daemon.Runner"/>
    </ItemGroup>

    <ItemGroup>
      <Compile Remove="Features\Applications\StartApplicationEndpoint.cs" />
      <Compile Remove="Features\Applications\SendInput\SendInputValidator.cs" />
      <Compile Remove="Features\Applications\RestartApplicationEndpoint.cs" />
      <Compile Remove="Features\Applications\New\NewApplicationValidator.cs" />
      <Compile Remove="Features\Applications\Edit\EditApplicationValidator.cs" />
    </ItemGroup>
</Project>
